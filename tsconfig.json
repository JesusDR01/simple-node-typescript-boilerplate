{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": { "@/*": ["./src/*"] },
        "lib": ["es2015", "esnext"],
        "skipLibCheck": true,
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],

    "files": ["src/index.ts"]
}
